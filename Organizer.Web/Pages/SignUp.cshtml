@page
@model SignUpModel
@{
    ViewData["Title"] = "Sign Up";
}

<h2>Sign Up new user</h2>

<form method="post">

    @* <input type="hidden" asp-for="User.UserId" /> *@

    <div class="from-group">
        <label asp-for="User.Login">Login name</label>
        <input asp-for="User.Login" class="form-control" />
        <span class="text-danger" asp-validation-for="User.Login"></span>
    </div>
    <div class="from-group">
        <label asp-for="User.Password">Password</label>
        <input type="password" asp-for="User.Password" class="form-control" />
        <span class="text-danger" asp-validation-for="User.Password"></span>
    </div>
    <div class="from-group">
        <label asp-for="User.Name">First Name</label>
        <input asp-for="User.Name" class="form-control" />
        <span class="text-danger" asp-validation-for="User.Name"></span>
    </div>
    <div class="from-group">
        <label asp-for="User.LastName">Last Name</label>
        <input asp-for="User.LastName" class="form-control" />
        <span class="text-danger" asp-validation-for="User.LastName"></span>
    </div>
    <div class="from-group">
        <label asp-for="User.Phone">Phone number</label>
        <input asp-for="User.Phone" class="form-control" />       
    </div>
    <div class="from-group">
        <label asp-for="User.Email">Email</label>
        <input asp-for="User.Email" class="form-control" />        
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

