@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2 class="right">Login</h2>

@if (Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}

<form method="post">

    <div class="from-group">
        <label asp-for="UserDetails.Login">Login name</label>
        <input asp-for="UserDetails.Login" class="form-control" />
        <span class="text-danger" asp-validation-for="UserDetails.Login"></span>
    </div>
    <div class="from-group">
        <label asp-for="UserDetails.Password">Password</label>
        <input type="password" asp-for="UserDetails.Password" class="form-control" />
        <span class="text-danger" asp-validation-for="UserDetails.Password"></span>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Login</button>    
</form>